@{
  Layout = "_Layout";
}

@model Library.Models.Author

@if (ViewBag.IsLibrarian == true)
{
  <div class="tileheader"><h3>Add a new Author</h3></div>
  <div class="tileheader">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
      <input type="submit" value="Add new Author" />
    }
  </div>
} else {
  <div class="tileheader"><h2>Access Denied!</h2></div>
}
