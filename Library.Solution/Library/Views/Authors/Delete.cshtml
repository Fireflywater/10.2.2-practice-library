@{
  Layout = "_Layout";
}

@model Library.Models.Author

@if (ViewBag.IsLibrarian == true)
{
  <div class="tileheader"><h3>Are you sure you want to delete this Author?</h3></div>
  <div class="tile">
    <div><h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3></div>
    <div>
      @using (Html.BeginForm())
      {
        <input type="submit" value="Delete" />
      }
    </div>
  </div>
} else {
  <div class="tileheader"><h2>Access Denied!</h2></div>
}
