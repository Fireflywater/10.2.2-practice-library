@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

@if (ViewBag.IsLibrarian == true)
{

  <h1>Books</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Authors</h3>
  }

  @foreach (Author author in Model)
  {
    <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
  }


} else {
<h2>Access Denied!</h2>
}
