@{
  Layout = "_Layout";
}

@model Library.Models.Author

@if (ViewBag.IsLibrarian == true)
{
  <h2>Add a Book</h2>

  <h4>Add a Book to this Author: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.AuthorId)

    @Html.Label("Select Book")
    @Html.DropDownList("BookId")

    <input type="submit" value="Save" />
  }
} else {
  <h2>Access Denied!</h2>
}
